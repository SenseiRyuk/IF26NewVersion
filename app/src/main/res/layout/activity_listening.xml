<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.if26.listening"
    android:background="@drawable/gradientbackground">

    <SearchView
        android:id="@+id/searchView"
        android:layout_width="401dp"
        android:layout_height="53dp"
        android:textColor="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <VideoView
        android:id="@+id/videoView"
        android:layout_width="342dp"
        android:layout_height="239dp"
        android:layout_marginStart="29dp"
        android:layout_marginTop="75dp"
        android:layout_marginEnd="35dp"
        android:layout_marginBottom="53dp"
        android:clickable="true"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@+id/textView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/searchView"
        app:layout_constraintVertical_bias="0.133" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="378dp"
        android:layout_height="41dp"
        android:layout_marginStart="17dp"
        android:layout_marginTop="352dp"
        android:layout_marginEnd="16dp"
        android:gravity="center"
        android:singleLine="true"
        android:text="Post Malone - Better Now"
        android:textColor="#FFFFFF"
        android:textSize="28dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/searchView" />

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="68dp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/seekBarMusic">

        <ImageButton
            android:id="@+id/replayButton"
            android:layout_width="68dp"
            android:layout_height="68dp"
            android:background="@null"
            app:srcCompat="@drawable/loop" />

        <ImageButton
            android:id="@+id/previousMusic"
            android:layout_width="68dp"
            android:layout_height="68dp"
            android:layout_weight="1"
            android:background="@null"
            app:srcCompat="@drawable/previouslistening" />

        <ImageButton
            android:id="@+id/playButton"
            android:layout_width="68dp"
            android:layout_height="68dp"
            android:background="@null"
            app:srcCompat="@drawable/playlistening" />

        <ImageButton
            android:id="@+id/nextMusic"
            android:layout_width="68dp"
            android:layout_height="68dp"
            android:layout_weight="1"
            android:background="@null"
            app:srcCompat="@drawable/nextlistening" />

        <ImageButton
            android:id="@+id/switchVideoAudio"
            android:layout_width="68dp"
            android:layout_height="68dp"
            android:background="@null"
            app:srcCompat="@drawable/video" />
    </LinearLayout>

    <SeekBar
        android:id="@+id/seekBarMusic"
        android:layout_width="381dp"
        android:layout_height="32dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="19dp"
        android:progressBackgroundTint="#FFFFFF"
        android:progressTint="#FFFFFF"
        android:thumbTint="#4A86E8"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <ImageButton
        android:id="@+id/addPlaylistButton"
        android:layout_width="68dp"
        android:layout_height="68dp"
        android:layout_marginTop="8dp"
        android:background="@null"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout2"
        app:srcCompat="@drawable/addplaylist" />

    <ImageButton
        android:id="@+id/likeButton"
        android:layout_width="68dp"
        android:layout_height="68dp"
        android:layout_marginTop="8dp"
        android:background="@null"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout2"
        app:srcCompat="@drawable/likenoclick" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="378dp"
        android:layout_height="41dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="17dp"
        android:gravity="center"
        android:text="Beerbongs and Bentleys"
        android:textColor="#FFFFFF"
        android:singleLine="true"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <ImageView
        android:id="@+id/imageAlbum"
        android:layout_width="340dp"
        android:layout_height="340dp"
        android:layout_marginStart="29dp"
        android:layout_marginTop="42dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="7dp"
        app:layout_constraintBottom_toTopOf="@+id/textView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/searchView"
        app:layout_constraintVertical_bias="1.0"/>
        <!--app:srcCompat="@drawable/hazy"
        android:scaleType="fitXY"
        android:adjustViewBounds="true" -->

    <TextView
        android:id="@+id/totalDuration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="5dp"
        android:singleLine="true"
        android:text=""
        android:textColor="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/seekBarMusic" />

    <TextView
        android:id="@+id/currentDuration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="1dp"
        android:singleLine="true"
        android:text=""
        android:textColor="#FFFFFF"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/seekBarMusic" />

    <ImageButton
        android:id="@+id/lyricsButton"
        android:layout_width="68dp"
        android:layout_height="68dp"
        android:layout_marginStart="103dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="104dp"
        android:background="@null"
        app:layout_constraintEnd_toStartOf="@+id/addPlaylistButton"
        app:layout_constraintStart_toEndOf="@+id/likeButton"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout2"
        app:srcCompat="@drawable/lyrics" />

    <TextView
        android:id="@+id/lyricsText"
        android:layout_width="340dp"
        android:layout_height="340dp"
        android:layout_marginStart="29dp"
        android:layout_marginEnd="30dp"
